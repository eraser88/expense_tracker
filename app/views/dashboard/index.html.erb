<!-- Page content -->
<div id="page-content-wrapper">
  <div class="content-header">
    <h1>
      <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
      View all your expenses!
    </h1>
  </div>
  <!-- Keep all page content within the page-content inset div! -->
  <div class="page-content inset">
    <div class="row">
      <div class="col-md-12">
        <p class="lead">Your expenses are displayed below.</p>
      </div>
      <table class="table table-striped table-hover table-responsive expense-table">
        <tr class = "table-header">
          <th>Date</th>
          <th>Category</th>
          <th>Amount (INR)</th>
        </tr>

        <% @expenses.each do |expense| %>
            <tr >
              <td><%= expense.date %></td>
              <td><%= expense.category %></td>
              <td><%= expense.amount %> <%= link_to '<i class="glyphicon glyphicon-edit change"></i>'.html_safe, edit_expense_path(expense) %>
               <%= link_to '<i class="glyphicon glyphicon-trash change delete"></i>'.html_safe, expense_path(expense), method: :delete %></td>
        </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



