<div id="page-content-wrapper">
  <div class="content-header">
    <h1>
      <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
      Add A New Expense
    </h1>
  </div>
</div>

<div class="page-content inset">

  <%= form_for :expense, html: {class: 'navbar-form navbar-left'} do |expense| %>

      <div class="col-md-7 input-group">
        <span class="input-group-addon">Date</span>
        <%= expense.text_field :date, class: 'form-control' %>
      </div>
      <div class="col-md-7 row"></div>


      <div class="col-md-7 input-group">
        <span class="input-group-addon">Category</span>
        <%= expense.text_field :category, class: 'form-control' %>
      </div>
      <div class="col-md-7 row"></div>

      <div class="col-md-7 input-group">
        <span class="input-group-addon">Amount</span>
        <%= expense.text_field :amount, class: 'form-control' %>
      </div>
      <div class="col-md-7 row"></div>

      <div class="col-md-7 input-group"></div>
      <%= expense.submit class: 'btn btn-default', value: 'Submit Expense' %>

  <% end %>

</div>

