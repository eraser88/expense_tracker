<div id="page-content-wrapper">
  <div class="content-header">
    <h1>
      <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
      Edit Expense
    </h1>
  </div>
</div>

<div class="page-content inset">
  <datalist id="categories">
    <option>Food</option>
    <option>Entertainment</option>
    <option>Utilities</option>
    <option>Travel</option>
  </datalist>

  <%= form_for :expense, url: {action: "update"}, method: :patch, html: {class: 'navbar-form navbar-left'} do |f| %>

      <div class="col-md-7 input-group">
        <span class="input-group-addon">Date</span>
        <%= f.text_field :date, class: 'form-control', 'data-date-format' =>  'yyyy/mm/dd'%>
      </div>
      <div class="col-md-7 row"></div>

      <div class="col-md-7 input-group">
        <span class="input-group-addon">Category</span>
        <%= f.text_field :category, class: 'form-control', list:'categories'%>
      </div>
      <div class="col-md-7 row"></div>

      <div class="col-md-7 input-group">
        <span class="input-group-addon">Amount</span>
        <%= f.text_field :amount, class: 'form-control' %>
      </div>
      <div class="col-md-7 row"></div>

      <div class="col-md-7 input-group"></div>
      <%= f.submit class: 'btn btn-default ', value: 'Update Expense' %>
      <%= link_to 'Cancel', dashboard_index_path, class: 'btn btn-default'  %>

  <% end %>

</div>

